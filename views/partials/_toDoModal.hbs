<div id="to_do_modal" class="modal_window">
    <!-- input task -->
    <div>
        <form action="/db/insert" method="POST">
            <label>What needs done?</label>
            <input id="task_input" class="user_input" type="text" name="task_input" maxlength="60" placeholder="..."><button class="addToListBtn" type="submit" onclick="addTaskToList(this)"><i class="fas fa-plus"></i></button></input>
        </form>
    </div>
    <!-- uncompleted items -->
    <div id="list_container" class="left">
        <label>To Do:</label>
        <hr/>
        <ul id="to_do_list">
        </ul>
    </div>
</div>